<h1>Nieuw profiel</h1>
<p>Gelieve alle onderstaande velden in te vullen voor dat u op "Create profile" clickt</p>


<%= form_for @user do |u| %>

	<% if @user.errors.any? %>
		<h2>Errors:</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	
	<table>
		<tr>
			<td><%= u.label :nickname %></td>
			<td><%= u.text_field :nickname %></td>
		</tr>
		<tr>
			<td><%= u.label :email %></td>
			<td><%= u.text_field :email %></td>
		</tr>
		<tr>
			<td><%= u.label :password %></td>
			<td><%= u.password_field :password %></td>
		</tr>
		<tr>
		 	<td><%= u.label :password_confirmation %></td>
			<td><%= u.password_field :password_confirmation %></td>
		</tr>
	</table>
	
	<p>
		<%= u.submit "Create profile" %>
	</p>



<% end %>