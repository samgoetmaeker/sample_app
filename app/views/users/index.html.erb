<% provide(:title, 'All users') %>
<h1>Users</h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
    	<section>
      <%= image_tag avatar_url(user) %>
      <%= link_to user.nickname, user %> |
      <%= user.coins %> |
      <%= user.total_score %>

		    <% if current_user.admin? && !current_user?(user) %>
		    | <%= button_to "delete", user, method: :delete,
		                                  data: { confirm: "You sure?" }  ,class: "btn btn-small btn-primary" %>
		 	  <% end %>
		 	</section>
		    </li>
		  <% end %>

</ul>
