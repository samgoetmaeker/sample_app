<% provide(:title, 'All users') %>
<h1>Users</h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag avatar_url(user) %>
      <%= link_to user.nickname, user %>
      <% if current_user.admin? && !current_user?(user) %>
    | <%= button_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
 	  <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>